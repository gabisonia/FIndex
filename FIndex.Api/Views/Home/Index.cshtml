    <script>
        // Handle image upload and preview
        const imageUpload = document.getElementById('imageUpload');
        const uploadButton = document.getElementById('uploadButton');
        const imagePreview = document.getElementById('imagePreview');
        const detectButton = document.getElementById('detectButton');
        const changeImageButton = document.getElementById('changeImageButton');
        const restartButton = document.getElementById('restartButton');
        
        // Step content containers
        const step1Content = document.getElementById('step1Content');
        const step2Content = document.getElementById('step2Content');
        const step3Content = document.getElementById('step3Content');
        
        // Step indicators
        const step1Indicator = document.getElementById('step1Indicator');
        const step2Indicator = document.getElementById('step2Indicator');
        const step3Indicator = document.getElementById('step3Indicator');
        const step1to2Progress = document.getElementById('step1to2Progress');
        const step2to3Progress = document.getElementById('step2to3Progress');
        
        // Store the selected file
        let selectedFile = null;
        let isProcessing = false; // Flag to prevent multiple requests
        let currentStep = 1;

        // Function to update step indicators
        function updateStepIndicators(step) {
            // Reset all indicators
            [step1Indicator, step2Indicator, step3Indicator].forEach((indicator, index) => {
                if (index + 1 <= step) {
                    indicator.className = 'w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-full flex items-center justify-center font-bold';
                } else {
                    indicator.className = 'w-10 h-10 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center font-bold';
                }
            });
            
            // Update progress bars
            if (step >= 2) {
                step1to2Progress.style.width = '100%';
            } else {
                step1to2Progress.style.width = '0%';
            }
            
            if (step >= 3) {
                step2to3Progress.style.width = '100%';
            } else {
                step2to3Progress.style.width = '0%';
            }
        }
        
        // Function to show specific step
        function showStep(step) {
            currentStep = step;
            updateStepIndicators(step);
            
            // Hide all steps
            [step1Content, step2Content, step3Content].forEach(content => {
                content.classList.add('hidden');
            });
            
            // Show current step
            switch(step) {
                case 1:
                    step1Content.classList.remove('hidden');
                    break;
                case 2:
                    step2Content.classList.remove('hidden');
                    break;
                case 3:
                    step3Content.classList.remove('hidden');
                    break;
            }
        }

        // Handle upload button click - trigger file input
        uploadButton.addEventListener('click', function(e) {
            e.preventDefault();
            console.log('Upload button clicked'); // Debug log
            imageUpload.click();
        });
        
        // Handle file selection with simplified processing
        imageUpload.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (!file) return;
            
            // Validate file type
            if (!file.type.startsWith('image/')) {
                alert('Please select a valid image file (JPG, PNG, GIF, etc.)');
                imageUpload.value = '';
                return;
            }
            
            // Validate file size (limit to 5MB to prevent freezing)
            const maxSize = 5 * 1024 * 1024; // 5MB in bytes
            if (file.size > maxSize) {
                alert('File size too large. Please select an image smaller than 5MB.');
                imageUpload.value = '';
                return;
            }
            
            // Show loading indicator
            const originalText = uploadButton.innerHTML;
            uploadButton.innerHTML = '<span class="flex items-center space-x-2"><svg class="w-5 h-5 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path></svg><span>Processing...</span></span>';
            uploadButton.disabled = true;
            
            selectedFile = file; // Store the file for later use
            
            // Simplified file reading with timeout
            const reader = new FileReader();
            let timeoutId;
            
            const resetButton = () => {
                uploadButton.innerHTML = originalText;
                uploadButton.disabled = false;
                if (timeoutId) clearTimeout(timeoutId);
            };
            
            // Set timeout to prevent hanging
            timeoutId = setTimeout(() => {
                alert('File processing timed out. Please try a smaller image.');
                resetButton();
                imageUpload.value = '';
            }, 5000); // 5 second timeout
            
            reader.onload = function(e) {
                try {
                    clearTimeout(timeoutId);
                    
                    // Simple preview without canvas optimization to prevent freezing
                    imagePreview.src = e.target.result;
                    
                    resetButton();
                    showStep(2);
                    
                } catch (error) {
                    console.error('Error processing image:', error);
                    alert('Error processing image. Please try a different file.');
                    resetButton();
                    imageUpload.value = '';
                }
            };
            
            reader.onerror = function() {
                clearTimeout(timeoutId);
                alert('Error reading file. Please try again.');
                resetButton();
                imageUpload.value = '';
            };
            
            // Use readAsDataURL for the file
            try {
                reader.readAsDataURL(file);
            } catch (error) {
                console.error('Error starting file read:', error);
                alert('Error reading file. Please try again.');
                resetButton();
                imageUpload.value = '';
            }
        });

        // Handle face detection button
        detectButton.addEventListener('click', async function() {
            // Prevent multiple simultaneous requests
            if (isProcessing) {
                return;
            }
            
            if (!selectedFile) {
                alert('Please select an image first');
                return;
            }

            isProcessing = true; // Set flag to prevent multiple requests
            
            // Show loading state
            detectButton.textContent = 'Detecting...';
            detectButton.disabled = true;

            try {
                // Create FormData with the image
                const formData = new FormData();
                formData.append('image', selectedFile, selectedFile.name);

                // Make API request
                const response = await fetch('http://localhost:5181/api/Search', {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const results = await response.json();
                
                // Clear previous results
                const resultsGrid = step3Content.querySelector('.grid');
                resultsGrid.innerHTML = '';
                
                // Generate and display results
                generateResultCards(results);
                
                // Update results count
                const resultsCount = step3Content.querySelector('p.text-gray-600');
                resultsCount.textContent = `We found ${results.length} potential matches in our database`;
                
                // Show step 3
                showStep(3);
                
                // Smooth scroll to results
                step3Content.scrollIntoView({ behavior: 'smooth', block: 'start' });
                
            } catch (error) {
                console.error('Error:', error);
                alert('Error detecting face: ' + error.message);
            } finally {
                // Reset button state and flag
                detectButton.textContent = 'Detect Face';
                detectButton.disabled = false;
                isProcessing = false; // Reset the flag
            }
        });
        
        // Add event handler for change image button
        changeImageButton.addEventListener('click', function() {
            showStep(1);
            imageUpload.value = ''; // Clear the file input
        });
        
        // Add event handler for restart button
        restartButton.addEventListener('click', function() {
            // Reset everything
            selectedFile = null;
            imageUpload.value = '';
            imagePreview.src = '';
            isProcessing = false;
            
            // Clear results
            const resultsGrid = step3Content.querySelector('.grid');
            resultsGrid.innerHTML = '';
            
            // Go back to step 1
            showStep(1);
        });
        
        // Function to generate result cards from API response
        function generateResultCards(results) {
            const resultsGrid = step3Content.querySelector('.grid');
            
            results.forEach((result, index) => {
                // Create result card
                const card = document.createElement('div');
                card.className = 'bg-white/70 backdrop-blur-sm rounded-3xl shadow-xl border border-gray-100 p-6 transform transition duration-500 ease-in-out opacity-0 translate-y-4 hover:scale-105';
                card.id = `result${index + 1}`;
                
                // Convert score to percentage
                const percentage = Math.round(result.score * 100);
                
                // Get color gradient based on score
                let colorGradient = 'from-gray-400 to-gray-500';
                if (percentage >= 80) {
                    colorGradient = 'from-green-400 to-emerald-500';
                } else if (percentage >= 60) {
                    colorGradient = 'from-yellow-400 to-orange-500';
                } else if (percentage >= 40) {
                    colorGradient = 'from-orange-400 to-red-500';
                }
                
                // Use the image filename directly or provide a data URL placeholder
                const imageUrl = result.image;
                
                card.innerHTML = `
                    <div class="text-center">
                        <div class="relative inline-block mb-4">
                            <img src="${imageUrl}" alt="Match" class="w-32 h-32 rounded-2xl object-cover mx-auto" onerror="this.src='data:image/svg+xml;base64,'">
                            <div class="absolute -bottom-2 -right-2 bg-gradient-to-r ${colorGradient} text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg">
                                ${percentage}%
                            </div>
                        </div>
                        <h4 class="text-xl font-bold text-gray-800 mb-4">${result.title || 'Unknown'}</h4>
                        <div class="space-y-2 text-sm text-left bg-gray-50 rounded-xl p-4 mb-4">
                            <p class="flex items-center text-gray-600">
                                <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                File: ${result.image}
                            </p>
                            <p class="flex items-center text-gray-600">
                                <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                </svg>
                                Confidence: ${percentage}%
                            </p>
                        </div>
                        <button class="block w-full bg-gradient-to-r from-blue-500 to-purple-600 text-white text-sm font-medium py-3 px-4 rounded-xl hover:shadow-lg transition">
                            View Details
                        </button>
                    </div>
                `;
                
                resultsGrid.appendChild(card);
                
                // Animate the card with a delay
                setTimeout(() => {
                    card.classList.remove('opacity-0', 'translate-y-4');
                    card.classList.add('opacity-100', 'translate-y-0');
                }, 100 * (index + 1));
            });
        }
    </script>
